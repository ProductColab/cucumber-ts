{
  "default": {
    "format": [
      "@cucumber/pretty-formatter",
      [
        "html",
        "test/cucumber-report.html"
      ]
    ],
    "formatOptions": {
      "snippetInterface": "synchronous"
    },
    "paths": [
      "src/**/*.feature"
    ],
    "import": [
      "support/**/*.ts",
      "src/**/*.steps.ts"
    ]
  }
}